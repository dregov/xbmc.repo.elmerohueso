<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.program.FTVhulu"
  name="Hulu Plus"
  version="1.1" 
  provider-name="elmerohueso">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>android</platform>
    <summary lang="en">Hulu Plus shortcut for Android</summary>
    <description lang="en">Launches the Hulu Plus app on the Android.  Can be added to the Home screen under the video categories for quick access.</description>
	<disclaimer>Must already have the Hulu app installed.</disclaimer>
  </extension>
</addon>
